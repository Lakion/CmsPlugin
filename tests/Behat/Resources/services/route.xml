<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="lakion_cms.page.admin.route.index.class">%sylius.behat.page.admin.crud.index.class%</parameter>
        <parameter key="lakion_cms.page.admin.route.create.class">Tests\Lakion\CmsPlugin\Behat\Page\Admin\Route\CreatePage</parameter>
        <parameter key="lakion_cms.page.admin.route.update.class">Tests\Lakion\CmsPlugin\Behat\Page\Admin\Route\UpdatePage</parameter>
    </parameters>

    <services>
        <service id="lakion_cms.context.setup.route" class="Tests\Lakion\CmsPlugin\Behat\Context\Setup\RouteContext">
            <argument type="service" id="sylius.behat.shared_storage" />
            <argument type="service" id="__symfony__.lakion_cms.fixture.example_factory.route" />
            <argument type="service" id="__symfony__.lakion_cms.manager.route" />
            <argument type="service" id="__symfony__.lakion_cms.repository.static_content" />
            <tag name="fob.context_service" />
        </service>

        <service id="lakion_cms.context.ui.admin.managing_routes" class="Tests\Lakion\CmsPlugin\Behat\Context\Ui\Admin\ManagingRoutesContext">
            <argument type="service" id="lakion_cms.page.admin.route.index" />
            <argument type="service" id="lakion_cms.page.admin.route.create" />
            <argument type="service" id="lakion_cms.page.admin.route.update" />
            <tag name="fob.context_service" />
        </service>

        <service id="lakion_cms.page.admin.route.index" class="%lakion_cms.page.admin.route.index.class%"
                 parent="sylius.behat.page.admin.crud.index" public="false">
            <argument type="string">lakion_cms_admin_route_index</argument>
        </service>
        <service id="lakion_cms.page.admin.route.create" class="%lakion_cms.page.admin.route.create.class%"
                 parent="sylius.behat.page.admin.crud.create" public="false">
            <argument type="string">lakion_cms_admin_route_create</argument>
        </service>
        <service id="lakion_cms.page.admin.route.update" class="%lakion_cms.page.admin.route.update.class%"
                 parent="sylius.behat.page.admin.crud.update" public="false">
            <argument type="string">lakion_cms_admin_route_update</argument>
        </service>
    </services>
</container>
